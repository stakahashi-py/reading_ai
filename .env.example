# Database URL (Cloud SQL or local)
# For SQLAlchemy (app): use Cloud SQL unix socket via instance connection name
# Example: postgresql+psycopg://USER:PASSWORD@/postgres?host=/cloudsql/PROJECT:REGION:INSTANCE
DATABASE_URL=postgresql+psycopg://user:pass@/postgres?host=/cloudsql/your-project:asia-northeast1:your-instance

# For psql (schema apply): libpq URI without driver suffix
# Example: postgresql://USER:PASSWORD@/postgres?host=/cloudsql/PROJECT:REGION:INSTANCE
PSQL_URL=postgresql://user:pass@/postgres?host=/cloudsql/your-project:asia-northeast1:your-instance

# Firebase project used for token verification
FIREBASE_PROJECT_ID=your-firebase-project-id

# Set true to bypass auth in local dev only
AUTH_DISABLED=false

# Vertex region for models
VERTEX_LOCATION=asia-northeast1
